<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.onlinetutoring.pojo.Student" table="student">
        <id name="id" column="id" type="long">
            <generator class="increment"/>
        </id>
     
        <property name="balance" column="balance" type="long"/>
        <property name="grade" column="grade" type="int"/>
		
		<many-to-one name="person" column="person_id" class="com.onlinetutoring.pojo.Person" not-null="true"></many-to-one>
		
		<set name="studentTimetables" inverse="true" lazy="true">
			<key column="student_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.StudentTimetable"/>
		</set>
		

    </class>
</hibernate-mapping>
