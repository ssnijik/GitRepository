<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
    http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-3.1.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">
	
    <context:component-scan base-package="com.onlinetutoring.dao"/>

	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close"
	    p:driverClassName="com.mysql.jdbc.Driver"
	    p:url="jdbc:mysql://localhost:3306/onlinetutoring"
	    p:username="root"
	    p:password="admin" />
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
	    <property name="packagesToScan">
            <list>
                <value>com.onlinetutoring.pojo</value>
            </list>
        </property>
        <property name="mappingLocations">
        	<list>
	        	<value>classpath:/configuration/Arrangement.hbm.xml</value>
	        	<value>classpath:/configuration/Course.hbm.xml</value>
	        	<value>classpath:/configuration/Master.hbm.xml</value>
	        	<value>classpath:/configuration/Notification.hbm.xml</value>
	        	<value>classpath:/configuration/Person.hbm.xml</value>
	        	<value>classpath:/configuration/Posting.hbm.xml</value>
	        	<value>classpath:/configuration/Student.hbm.xml</value>
	        	<value>classpath:/configuration/StudentTimetable.hbm.xml</value>
	        	<value>classpath:/configuration/Subject.hbm.xml</value>
	        	<value>classpath:/configuration/Timetable.hbm.xml</value>
	        	<value>classpath:/configuration/Tutor.hbm.xml</value>
        	</list>
        </property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>
	
	<bean id="hibernateTemplate"
		class="org.springframework.orm.hibernate3.HibernateTemplate"
		 p:sessionFactory-ref="sessionFactory" />
</beans>