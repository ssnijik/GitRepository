<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.onlinetutoring.pojo.Person" table="person">
        <id name="id" column="id" type="long">
            <generator class="increment"/>
        </id>
     
        <property name="firstName" column="first_name" type="string" length="30" not-null="true"/>
        <property name="lastName" column="last_name" type="string" length="30" not-null="true"/>
        <property name="email" column="email" type="string" length="60" not-null="true"/>
        <property name="password" column="password" type="string" length="30" not-null="true"/>
        <property name="phone" column="phone" type="string" length="11"/>
        <property name="birthday" column="birthday" type="date"/>
        <property name="cardNumber" column="card_number" type="string" length="16"/>
        <property name="type" column="type" type="char" length="1"/>
        <property name="score" column="score" type="int"/>
        <property name="avator" column="avator" type="string" length="1000"/>
		
		<set name="tutors" inverse="true" lazy="true">
			<key column="person_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Student"/>
		</set>
		<set name="students" inverse="true" lazy="true">
			<key column="person_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Tutor"/>
		</set>
		<set name="hosts" inverse="false" lazy="true" table="friend">
			<key column="secondary_id"></key>
			<many-to-many class="com.onlinetutoring.pojo.Person" column="primary_id"/>
		</set>
		<set name="guests" inverse="true" lazy="true" table="friend">
			<key column="primary_id"></key>
			<many-to-many class="com.onlinetutoring.pojo.Person" column="secondary_id"/>
		</set>
		<set name="senders" inverse="true" lazy="true">
			<key column="sender_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Notification"/>
		</set>
		<set name="recipients" inverse="true" lazy="true">
			<key column="recipient_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Notification"/>
		</set>
		<set name="masters" inverse="true" lazy="true">
			<key column="posted_by_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Master"/>
		</set>
		<set name="postings" inverse="true" lazy="true">
			<key column="posted_by_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Posting"/>
		</set>
		

    </class>
</hibernate-mapping>
