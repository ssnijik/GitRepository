<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.onlinetutoring.pojo.Master" table="master">
        <id name="id" column="id" type="long">
            <generator class="increment"/>
        </id>
     
        <property name="title" column="title" type="string" length="30" not-null="true"/>
        <property name="content" column="content" type="string" length="1000" not-null="true"/>
        <property name="time" type="date" not-null="true" generated="insert">
        	<column name="time" sql-type="datetime" default="CURRENT_TIMESTAMP"/>
        </property>
        <property name="view" column="view" type="int"/>
        <property name="reply" column="reply" type="int"/>
		
		<many-to-one name="postedBy" column="posted_by_id" class="com.onlinetutoring.pojo.Person" lazy="false" not-null="true"></many-to-one>
		
		<set name="postings" inverse="true" lazy="true">
			<key column="master_id"></key>
			<one-to-many class="com.onlinetutoring.pojo.Posting"/>
		</set>
		

    </class>
</hibernate-mapping>
