<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.onlinetutoring.pojo.StudentTimetable" table="student_timetable">
        <id name="id" column="id" type="long">
            <generator class="increment"/>
        </id>
     
        <property name="score" column="score" type="int"/>
        <property name="remark" column="remark" type="string" length="1000"/>
		
		<many-to-one name="student" column="student_id" class="com.onlinetutoring.pojo.Student" lazy="false" not-null="true"></many-to-one>
		<many-to-one name="timetable" column="timetable_id" class="com.onlinetutoring.pojo.Timetable" lazy="false" not-null="true"></many-to-one>
		
    </class>
</hibernate-mapping>
